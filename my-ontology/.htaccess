Header set Access-Control-Allow-Origin *
Options -MultiViews
Options +FollowSymLinks

# Directive to ensure *.rdf files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf
AddType text/turtle .ttl
AddType application/n-triples .n3
AddType application/ld+json .json

RewriteEngine on
SetEnvIf Accept ^.+$ SYNTAX=other
SetEnvIf Accept ^.*application/rdf\+xml.* SYNTAX=rdf
SetEnvIf Accept ^.*text/turtle.* SYNTAX=ttl
SetEnvIf Accept ^.*application/json-ld.* SYNTAX=json
SetEnvIf Accept ^.*application/n-triples.* SYNTAX=nt
SetEnvIf Accept ^.*text/html.* SYNTAX=html
SetEnvIf Accept ^\*/\*$ SYNTAX=ttl
SetEnvIf Request_URI ^.*$ ROOT_URL=https://cefriel.github.io/ontology-template

#####     My Ontology     #####

# Versioned specification releases
RewriteCond %{ENV:SYNTAX} ^(rdf|ttl|json|nt)$
RewriteRule ^(schema/)?([0-9].[0-9].[0-9])/?$ %{ENV:ROOT_URL}/my-ontology/$2/my-ontology.%{ENV:SYNTAX} [R=303,L]

# Latest specification releases
RewriteCond %{ENV:SYNTAX} ^(rdf|ttl|json|nt)$
RewriteRule ^(schema)?(/latest)?/?$ %{ENV:ROOT_URL}/my-ontology/latest/my-ontology.%{ENV:SYNTAX} [R=303,L]

# Versioned specification documentation
RewriteCond %{ENV:SYNTAX} ^html$
RewriteRule ^(schema/)?([0-9].[0-9].[0-9])/?$ %{ENV:ROOT_URL}/my-ontology/$2/index.html [R=303,L]

# Latest specification documentation
RewriteCond %{ENV:SYNTAX} ^html$
RewriteRule ^(schema)?(/latest)?/?$ %{ENV:ROOT_URL}/my-ontology/latest/index.html [R=303,L]

#####     Default     #####

# Specification repo
RewriteCond %{ENV:MARKER} ^other$
RewriteRule ^.*$ https://github.com/cefriel/my-ontology [R=303,L]

# Default response
RewriteRule ^.*$ https://github.com/cefriel/my-ontology [R=303,L]